<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="火腿肠"
            app:layout_constraintTop_toTopOf="@+id/finished_goods"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/finished_goods"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/identifier_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:text="编号"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_goods"
            app:layout_constraintLeft_toRightOf="@+id/name_goods"
            app:layout_constraintTop_toTopOf="@+id/name_goods" />

        <ImageView
            android:id="@+id/finished_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_check_white_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintRight_toLeftOf="@+id/number_goods"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/number_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:text="0/1"
            app:layout_constraintBottom_toBottomOf="@+id/identifier_goods"
            app:layout_constraintTop_toTopOf="@+id/identifier_goods"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
